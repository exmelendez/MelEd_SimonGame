<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/greenBt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/r_corners2"
                android:backgroundTint="@color/green"
                android:onClick="buttonClicked" />


            <Button
                android:id="@+id/redBt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/r_corners2"
                android:backgroundTint="@color/red"
                android:onClick="buttonClicked" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yellowBt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/r_corners2"
                android:backgroundTint="@color/yellow"
                android:onClick="buttonClicked" />

            <Button
                android:id="@+id/blueBt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/r_corners2"
                android:backgroundTint="@color/blue"
                android:onClick="buttonClicked" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mad_props"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:backgroundTint="#C70039"
        android:drawableRight="@drawable/c4q_logo_crop_super_small"
        android:gravity="right"
        android:text="Made with love @ "
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/startBt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/r_start2"
        android:onClick="buttonClicked"
        android:text="START"
        android:textColor="#f3f7a3ff"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>