<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/greenBt"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@id/startBt"
        android:layout_margin="5dp"
        android:background="@drawable/r_corners2"
        android:backgroundTint="@color/green"
        android:onClick="buttonClicked" />

    <Button
        android:id="@+id/redBt"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_marginBottom="@id/startBt"
        android:layout_toRightOf="@id/greenBt"
        android:layout_margin="5dp"
        android:background="@drawable/r_corners2"
        android:backgroundTint="@color/red"
        android:onClick="buttonClicked" />

    <Button
        android:id="@+id/yellowBt"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_marginTop="@id/startBt"
        android:layout_below="@id/greenBt"
        android:layout_margin="5dp"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/r_corners2"
        android:onClick="buttonClicked" />

    <Button
        android:id="@+id/blueBt"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_margin="5dp"
        android:layout_below="@id/redBt"
        android:layout_toRightOf="@id/yellowBt"
        android:backgroundTint="@color/blue"
        android:background="@drawable/r_corners2"
        android:onClick="buttonClicked" />

    <TextView
        android:id="@+id/mad_props"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:drawableRight="@drawable/c4q_logo_crop_super_small"
        android:gravity="right"
        android:backgroundTint="#C70039"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:text="Made with love @ "/>

    <Button
        android:id="@+id/startBt"
        android:onClick="buttonClicked"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/r_start2"
        android:textStyle="bold"
        android:textColor="#C70039"
        android:textSize="30dp"
        android:text="START" />

</RelativeLayout>